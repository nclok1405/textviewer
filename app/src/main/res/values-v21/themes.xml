<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Android 5+ -->
    <style name="Theme.TextViewer" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/navigation_bar_dark</item>
    </style>
    <style name="Theme.TextViewer.Black" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_black</item>
        <item name="android:navigationBarColor">@color/navigation_bar_dark</item>
    </style>
    <style name="Theme.TextViewer.Light" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_white</item>
        <item name="android:navigationBarColor">@color/navigation_bar_dark</item>
    </style>
</resources>
